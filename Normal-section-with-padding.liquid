{%- style -%}
  .section-{{ section.id }}-padding {
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_left_right }}px {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding: {{ section.settings.padding_top_mobile }}px {{ section.settings.padding_left_right_mobile }}px {{ section.settings.padding_bottom_mobile }}px;
    }
  {%- endstyle -%}
  <div class="section-{{ section.id }}-padding {{ section.settings.custom_class }}"></div>
  
  {% schema %}
  {
  "name": "Product Tab",
  "settings": [
         {
          "type": "text",
          "id": "custom_class",
          "label": "Custom Class"
        },
        {
    "type": "header",
    "content": "Padding(Desktop)"
  },
   {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "Padding Top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_left_right",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "Padding Left Right",
    "default": 36
  }, 
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "Padding Bottom",
    "default": 36
  },
  {
    "type": "header",
    "content": "Padding(mobile)"
  },
   {
    "type": "range",
    "id": "padding_top_mobile",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "Padding Top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_left_right_mobile",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "Padding Left Right",
    "default": 36
  }, 
  {
    "type": "range",
    "id": "padding_bottom_mobile",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "Padding Bottom",
    "default": 36
  }
  
  ],
  "blocks": [],
  "presets": [
  {
  "name": "Product Tab",
  "category": "ADVANCED LAYOUT"
  }
  ]
  }
  {% endschema %}
  
